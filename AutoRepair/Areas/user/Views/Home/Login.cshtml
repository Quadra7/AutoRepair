@model AutoRepair.Areas.user.Models.LoginModel
@{
}

<main class="form-signin w-100 m-auto">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- LOGOTYPE -->
        <img class="mb-4" src="~/assets/logo.png" alt="">

        <h1 class="h3 mb-3 fw-normal">Good to see you again</h1>

        <!-- Email -->
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" />
            <label for="floatingInput">Email address</label>
        </div>

        <!-- Password -->
        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="password" />
            <label for="floatingPassword">Password</label>
        </div>

        <!-- Need to remember user? (yes/no) -->
        <div class="checkbox mb-3">
            <label>
                <input asp-for="rememberMe" type="checkbox" value="remember-me"> Remember me
            </label>
        </div>

        <!-- Sign In (submit button) -->
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign In</button>

        <!-- Register -->
        <div class="form-floating">
            <a asp-area="user" asp-controller="Register" asp-action="Index" type="button" class="btn btn-primary btn-sm">Sign Up</a>
        </div>

        <!-- Back to main page -->
        <div class="form-floating">
            <a asp-area="" asp-controller="Home" asp-action="Index" type="button" class="btn btn-secondary btn-sm">Home</a>
        </div>
    </form>
</main>