@model AutoRepair.Data.Entities.OrderModel

@{
    ViewData["Title"] = "Order Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.Info.LastName)

            @Html.DisplayFor(model => model.Client.Info.FirstName)

            @Html.DisplayFor(model => model.Client.Info.MiddleName)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Master)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Master.Info.LastName)

            @Html.DisplayFor(model => model.Master.Info.FirstName)

            @Html.DisplayFor(model => model.Master.Info.MiddleName)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Price) rub.
        </dd>

        <dt class = "col-sm-2">
            Repair Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt class = "col-sm-2">
            Order Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>

        <dt class = "col-sm-2">
            Paid to master?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPaidOut)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
