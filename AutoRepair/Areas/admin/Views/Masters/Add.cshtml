@model AutoRepair.Data.Entities.MasterModel

@{
    ViewData["Title"] = "New Master";
}

<h1>Add New Master</h1>

<h4>Master</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <select asp-for="ID" class="form-control" asp-items="ViewBag.Clients"></select>
            </div>

            <div class="form-group">
                <label asp-for="SpecialtyID" class="control-label">Specialty</label>
                <select asp-for="SpecialtyID" class="form-control" asp-items="ViewBag.Specialties"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
