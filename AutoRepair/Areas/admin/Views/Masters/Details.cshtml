@model AutoRepair.Data.Entities.MasterModel

@{
    ViewData["Title"] = "Master Details";
}

<h1>Details</h1>

<div>
    <h4>Master</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info.LastName)
        </dd>
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info.FirstName)
        </dd>
        @if (Model.Info.MiddleName != null)
        {
            <dt class = "col-sm-2">
                Middle Name
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Info.MiddleName)
            </dd>
        }
        <dt class = "col-sm-2">
            Phone Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Info.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Specialty.Name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialty.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Balance)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
