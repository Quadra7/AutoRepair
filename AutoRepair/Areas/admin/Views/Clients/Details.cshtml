@model AutoRepair.Data.Entities.ClientModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info.LastName)
        </dd>
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info.FirstName)
        </dd>
        @if (Model.Info.MiddleName != null)
        {
            <dt class = "col-sm-2">
                Middle Name
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Info.MiddleName)
            </dd>
        }
        <dt class = "col-sm-2">
            Phone Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Info.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info.Address)
        </dd>
        <dt class = "col-sm-2">
            Loyalty Program
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isInLoyalProgram)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
