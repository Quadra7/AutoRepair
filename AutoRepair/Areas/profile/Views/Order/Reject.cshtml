@model OrderModel

@{
    ViewData["Title"] = "Reject Order";
}

<h1>Reject</h1>

<h3>Are you sure you want to reject this order?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Info.LastName)

            @Html.DisplayFor(model => model.Client.Info.FirstName)

            @Html.DisplayFor(model => model.Client.Info.MiddleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Reject">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Reject" class="btn btn-danger" /> |
        <a asp-area="profile" asp-controller="Home" asp-action="Index">Back</a>
    </form>
</div>
